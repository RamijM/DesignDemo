<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/divider"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="0dp"
        android:background="@color/text2"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/parentCard"/>


    <View
        android:id="@+id/circle"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:visibility="gone"
        android:background="@drawable/white_circle"
        app:layout_constraintTop_toTopOf="@+id/divider"
        app:layout_constraintLeft_toLeftOf="@+id/divider"
        app:layout_constraintRight_toRightOf="@+id/divider"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/parentCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/divider"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B916"
                android:textColor="@color/text1"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:20 AM"
                android:textColor="@color/text2"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starbucks"
                android:textColor="@color/text1"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvMoney"
                app:layout_constraintLeft_toLeftOf="parent"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spent Amount"
                android:textColor="@color/text2"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvDesc"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDesc1Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9122"
                android:textStyle="bold"
                android:textColor="@color/text1"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvDesc"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDesc1ValueD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Round up to \u20B9122)"
                android:textColor="@color/text1"
                android:textSize="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="@+id/tvDesc2ValueD"
                app:layout_constraintBottom_toBottomOf="@+id/tvDesc2ValueD"
                app:layout_constraintRight_toLeftOf="@+id/tvDesc2ValueD"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDesc2ValueD"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:text="2X"
                android:gravity="center"
                android:background="@drawable/blue_circle"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvDesc1Value"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSpendFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Spend From"
                android:textColor="@color/text2"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintRight_toLeftOf="@+id/tvSpendFromValue"
                app:layout_constraintTop_toBottomOf="@+id/tvDesc2ValueD"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSpendFromValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ICICI Bank XXXX8768"
                android:textStyle="bold"
                android:textColor="@color/text1"
                android:textSize="@dimen/_13sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvSpendFrom"
                app:layout_constraintTop_toBottomOf="@+id/tvDesc2ValueD"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDeductedFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Deducted From"
                android:textColor="@color/text2"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintRight_toLeftOf="@+id/tvDeductedFromValue"
                app:layout_constraintTop_toBottomOf="@+id/tvSpendFrom"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDeductedFromValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SBI Bank XXXX2314"
                android:textStyle="bold"
                android:textColor="@color/text1"
                android:textSize="@dimen/_13sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvDeductedFrom"
                app:layout_constraintTop_toBottomOf="@+id/tvSpendFrom"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>